
.controls.controls-row
    input(type="text", ng-model="issue.author", placeholder="Author").span2
    select(ng-model="issue.type", ng-options="type for type in issueTypes").span2
      option(value="") Type
    select(ng-model="issue.priority", ng-options="priority for priority in issuePriorities").span2
      option(value="") Priority
.controls
  input(type="text", ng-model="issue.title", placeholder="Title").input-block-level
.controls
  textarea.input-block-level(placeholder="Text",ng-model="issue.text",rows=10)

.btn-toolbar.pull-right
  button(type="submit", ng-click="saveIssue()").btn.btn-primary Save
  a(ng-href="#/").btn.btn-inverse Cancel

