
.controls.controls-row
    input(type="text", ng-model="issue.author", placeholder="Author").span1
    select(ng-model="issue.type", ng-options="type.label for type in issueTypes").span2
      option(value="") Type
    select(ng-model="issue.priority", ng-options="priority.label for priority in issuePriorities").span2
      option(value="") Priority
.controls
  input(type="text", ng-model="issue.title", placeholder="Title").input-block-level
.controls
  textarea.input-block-level(placeholder="Text",ng-model="issue.text",rows=10)

.btn-toolbar
  button(type="submit", ng-click="saveIssue()").btn.btn-primary Save
  a(ng-href="#/").btn.btn-inverse Cancel

