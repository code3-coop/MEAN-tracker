.container-fluid
  .row
    form.form-inline
      label Author:
      input(type="text", ng-model="issue.author")
      label Type: 
      select(ng-model="issue.type")
      label Priority:
      select(ng-model="issue.priority")
  .row
    input(type="text", ng-model="issue.title", placeholder="Title").input-block-level
  .row
    textarea.input-block-level(placeholder="Text",ng-model="issue.text")

  .btn-toolbar
    button(type="submit", ng-click="saveIssue").btn.btn-primary Save
    a(ng-href="#/").btn.btn-inverse Cancel

